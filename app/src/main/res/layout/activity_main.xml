<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" />

    <TextView
        android:id="@+id/CtoFTitleTextView"
        android:layout_width="213dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:text="@string/c_to_f_converter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/CtoFEnteredValueEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter a value to convert to Fahrenheit"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constrainTop_toBottomOf="@+id/CtoFTitleTextView" />

    <Button
        android:layout_width="215dp"
        android:layout_height="215dp"
        android:id="@+/CtoFConvertButton"
        android:text="Convert!"
        app:layout_constrainTop_toBottomOf="@+id/CtoFEnteredValueEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/CtoFConvertedValueTextView"
        toold:text="-42.42"
        app:layout_constrainTop_toBottomOf="@+id/CtoFConvertButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />